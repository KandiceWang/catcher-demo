@{
    ViewData["Title"] = "台灣創作者接發案平台";
}

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 80vh;">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold text-dark mb-4" style="color: #2c5f6f !important;">
                        Connecting clients in<br>
                        need to freelancers<br>
                        who deliver
                    </h1>
                    
                    <!-- Tab Navigation -->
                    <div class="search-tabs mb-4">
                        <div class="btn-group w-100 mb-4" role="group" style="max-width: 500px; margin: 0 auto;">
                            <button type="button" class="btn btn-lg search-tab-btn active" data-tab="talent" 
                                    style="background: #2c5f6f; color: white; border: none; border-radius: 25px 0 0 25px;">
                                Find talent
                            </button>
                            <button type="button" class="btn btn-lg search-tab-btn" data-tab="jobs"
                                    style="background: #b8d4e3; color: #2c5f6f; border: none; border-radius: 0 25px 25px 0;">
                                Browse jobs
                            </button>
                        </div>

                        <!-- Search Box -->
                        <div class="search-container" style="max-width: 600px; margin: 0 auto;">
                            <form action="/Home/Services" method="get" class="search-form">
                                <div class="input-group input-group-lg">
                                    <input type="text" name="search" class="form-control search-input" 
                                           placeholder="Search by role, or keywords"
                                           style="border: none; border-radius: 25px 0 0 25px; background: white; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                                    <button type="submit" class="btn search-btn" 
                                            style="background: #ff6b6b; color: white; border: none; border-radius: 0 25px 25px 0; padding: 0 30px;">
                                        <i class="fas fa-search me-2"></i>search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

