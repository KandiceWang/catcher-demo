<!-- Featured Services Section (保持原有功能) -->
<section class="featured-services py-5" style="background: #f8f9fa;">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold" style="color: #2c5f6f;">精選服務</h2>
        <div class="row g-4">
            @foreach (var service in ViewBag.FeaturedServices)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card h-100 border-0 shadow-sm">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title" style="color: #2c5f6f;">@service.Title</h5>
                            <p class="text-muted mb-2">by @service.CreatorName</p>
                            <div class="d-flex align-items-center mb-2">
                                <div class="stars text-warning me-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= service.Rating ? "" : "text-muted")"></i>
                                    }
                                </div>
                                <span class="text-muted small">@service.Rating (@service.ReviewCount)</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0" style="color: #ff6b6b;">NT$ @service.Price.ToString("N0")</span>
                                <a href="/Home/ServiceDetail/@service.Id" class="btn btn-outline-primary rounded-pill">查看詳情</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-5">
            <a href="/Home/Services" class="btn btn-lg rounded-pill px-5" style="background: #2c5f6f; color: white;">查看更多服務</a>
        </div>
    </div>
</section>

<style>
.search-tab-btn {
    transition: all 0.3s ease;
    font-weight: 600;
}

.search-tab-btn.active {
    background: #2c5f6f !important;
    color: white !important;
}

.search-tab-btn:not(.active) {
    background: #b8d4e3 !important;
    color: #2c5f6f !important;
}

.search-tab-btn:not(.active):hover {
    background: #a0c4d4 !important;
}

.search-input {
    font-size: 1.1rem;
    padding: 15px 20px;
}

.search-input::placeholder {
    color: #999;
}

.search-btn {
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
}

.search-btn:hover {
    background: #ff5252 !important;
    transform: translateY(-1px);
}

.category-card {
    transition: all 0.3s ease;
    cursor: pointer;
}

.category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
}

.service-card {
    transition: all 0.3s ease;
    border-radius: 15px !important;
}

.service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15) !important;
}

.btn-outline-primary {
    border-color: #2c5f6f;
    color: #2c5f6f;
}

.btn-outline-primary:hover {
    background-color: #2c5f6f;
    border-color: #2c5f6f;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tab switching functionality
    const tabButtons = document.querySelectorAll('.search-tab-btn');
    
    tabButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Remove active class from all buttons
            tabButtons.forEach(btn => btn.classList.remove('active'));
            // Add active class to clicked button
            this.classList.add('active');
            
            // Update placeholder text based on selected tab
            const searchInput = document.querySelector('.search-input');
            if (this.dataset.tab === 'talent') {
                searchInput.placeholder = 'Search by role, or keywords';
            } else {
                searchInput.placeholder = 'Search for job opportunities';
            }
        });
    });
});
</script>
